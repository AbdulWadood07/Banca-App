<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.Transaction">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/transaction_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="Transactions"
        app:titleTextColor="@android:color/white"
        android:background="@color/bright_blue"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_below="@id/transaction_toolbar"
        android:id="@+id/rv_transactions"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

    <Button
        android:id="@+id/add_transaction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn1_background"
        android:elevation="10dp"
        android:layout_margin="10dp"
        android:layout_weight="2"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:text="Do Transactions"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textStyle="bold" />
        <Button
            android:id="@+id/refresh_transaction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn1_background"
            android:elevation="10dp"
            android:layout_margin="10dp"
            android:layout_weight="2"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:text="Refresh"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>